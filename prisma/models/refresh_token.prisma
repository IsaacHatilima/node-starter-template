model RefreshToken {
  id            Int     @id @default(autoincrement())
  public_id     String   @unique @default(uuid())
  userId        Int
  token         String   @unique
  revoked       Boolean  @default(false)
  createdAt     DateTime @default(now())
  expiresAt     DateTime

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}